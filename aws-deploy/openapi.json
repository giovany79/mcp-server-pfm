{
    "openapi": "3.0.1",
    "info": {
        "title": "Personal Finance Assistant",
        "description": "API for analyzing personal financial records from a CSV file.",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "https://ys32oben10.execute-api.us-east-1.amazonaws.com/Prod/"
        }
    ],
    "paths": {
        "/tools/calculate_totals": {
            "post": {
                "description": "Calculate total income, expenses, and balance for a specific year, month, or category.",
                "operationId": "calculateTotals",
                "security": [
                    {
                        "ApiKeyAuth": []
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "year": {
                                        "type": "integer",
                                        "description": "Year to filter by (e.g., 2025)"
                                    },
                                    "month": {
                                        "type": "integer",
                                        "description": "Month to filter by (1-12)"
                                    },
                                    "category": {
                                        "type": "string",
                                        "description": "Category to filter by (e.g., 'food', 'restaurant')"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Successful calculation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "income": {
                                            "type": "number"
                                        },
                                        "expenses": {
                                            "type": "number"
                                        },
                                        "balance": {
                                            "type": "number"
                                        },
                                        "transaction_count": {
                                            "type": "integer"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/tools/list_transactions": {
            "post": {
                "description": "List individual transactions matching specific criteria.",
                "operationId": "listTransactions",
                "security": [
                    {
                        "ApiKeyAuth": []
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "limit": {
                                        "type": "integer",
                                        "description": "Max number of transactions to return (default 10)",
                                        "default": 10
                                    },
                                    "category": {
                                        "type": "string",
                                        "description": "Category to filter by"
                                    },
                                    "start_date": {
                                        "type": "string",
                                        "format": "date",
                                        "description": "Filter transactions on or after this date (YYYY-MM-DD)"
                                    },
                                    "end_date": {
                                        "type": "string",
                                        "format": "date",
                                        "description": "Filter transactions on or before this date (YYYY-MM-DD)"
                                    },
                                    "year": {
                                        "type": "integer",
                                        "description": "Year to filter by"
                                    },
                                    "month": {
                                        "type": "integer",
                                        "description": "Month to filter by"
                                    },
                                    "day": {
                                        "type": "integer",
                                        "description": "Day of month to filter by"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "List of transactions",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "Date": {
                                                "type": "string"
                                            },
                                            "Category": {
                                                "type": "string"
                                            },
                                            "Amount": {
                                                "type": "number"
                                            },
                                            "Income/expensive": {
                                                "type": "string"
                                            },
                                            "Description": {
                                                "type": "string"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/tools/add_transaction": {
            "post": {
                "description": "Add a new transaction to the dataset.",
                "operationId": "addTransaction",
                "security": [
                    {
                        "ApiKeyAuth": []
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": [
                                    "description",
                                    "transaction_type",
                                    "amount",
                                    "category"
                                ],
                                "properties": {
                                    "description": {
                                        "type": "string",
                                        "description": "Transaction description"
                                    },
                                    "transaction_type": {
                                        "type": "string",
                                        "description": "Transaction type: income or expensive"
                                    },
                                    "amount": {
                                        "type": "number",
                                        "description": "Transaction amount (positive number)"
                                    },
                                    "category": {
                                        "type": "string",
                                        "description": "Category name"
                                    },
                                    "date": {
                                        "type": "string",
                                        "format": "date",
                                        "description": "Transaction date (YYYY-MM-DD)"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Transaction added",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "status": {
                                            "type": "string"
                                        },
                                        "transaction": {
                                            "type": "object",
                                            "properties": {
                                                "Description": {
                                                    "type": "string"
                                                },
                                                "Income/expensive": {
                                                    "type": "string"
                                                },
                                                "Amount": {
                                                    "type": "number"
                                                },
                                                "Category": {
                                                    "type": "string"
                                                },
                                                "Date": {
                                                    "type": "string"
                                                }
                                            }
                                        },
                                        "transaction_count": {
                                            "type": "integer"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "securitySchemes": {
            "ApiKeyAuth": {
                "type": "apiKey",
                "in": "header",
                "name": "x-api-key"
            }
        }
    }
}
